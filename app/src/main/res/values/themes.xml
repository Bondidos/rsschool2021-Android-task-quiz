<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Quiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Quiz.First" parent="Theme.Quiz">
        <item name="colorPrimary">@color/deep_orange_100</item>
        <item name="colorPrimaryDark">@color/deep_orange_100_dark</item>
        <item name="colorPrimaryVariant">@color/deep_orange_100_dark</item>
        <item name="colorSecondary">@color/deep_orange_100</item>
        <item name="colorSecondaryVariant">@color/deep_orange_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_orange_100_dark</item>
    </style>

    <style name="Theme.Quiz.Second" parent="Theme.Quiz">
        <item name="colorPrimary">@color/yellow_100</item>
        <item name="colorPrimaryDark">@color/yellow_100_dark</item>
        <item name="colorPrimaryVariant">@color/yellow_100_dark</item>
        <item name="colorSecondary">@color/yellow_100</item>
        <item name="colorSecondaryVariant">@color/yellow_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow_100_dark</item>
    </style>
    <style name="Theme.Quiz.Third" parent="Theme.Quiz">
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryDark">@color/red_primary_dark</item>
        <item name="colorPrimaryVariant">@color/red_primary_dark</item>
        <item name="colorSecondary">@color/red_primary</item>
        <item name="colorSecondaryVariant">@color/red_light_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_primary_dark</item>
    </style>
    <style name="Theme.Quiz.Fourth" parent="Theme.Quiz">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item>
        <item name="colorSecondary">@color/blue_primary</item>
        <item name="colorSecondaryVariant">@color/blue_light_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_primary_dark</item>
    </style>
    <style name="Theme.Quiz.Fifth" parent="Theme.Quiz">
        <item name="colorPrimary">@color/grey_primary</item>
        <item name="colorPrimaryDark">@color/grey_light_secondary</item>
        <item name="colorPrimaryVariant">@color/grey_light_secondary</item>
        <item name="colorSecondary">@color/grey_primary</item>
        <item name="colorSecondaryVariant">@color/grey_light_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_primary_dark</item>
    </style>
</resources>
